{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "./lib",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true
  },
  "types": ["node"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
